<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/listview_error_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dip"
            android:contentDescription="@null"
            android:gravity="center_horizontal"
            android:src="@mipmap/empty_icon_net" />


        <TextView
            android:id="@+id/loading_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="亲爱的，您的网络开小差了哦" />

        <TextView
            android:id="@+id/check_network_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="请检查一下您的网络" />

        <Button
            android:id="@+id/loading_refreash_btn"
            android:layout_width="110dip"
            android:layout_height="34dp"
            android:layout_marginTop="20dip"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:background="@drawable/rectangle_corner_empty_bule2"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="@color/normal_blue"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>
